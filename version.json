{
  "version": "1.3",
  "publicReleaseRefSpec": [
    "^refs/heads/main", // we release out of main
    "^refs/heads/rel/v\\d+\\.\\d+" // we also release tags starting with vN.N
  ],
  "nugetPackageVersion":{
    "semVer": 2
  },
  "cloudBuild": {
    "buildNumber": {
      "enabled": true
    },
    "setVersionVariables": true,
    "setAllVariables": true
  }
}
